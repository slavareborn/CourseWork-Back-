{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "assets": [
    { "include": "config/**", "outDir": "dist" },
    { "include": "**/*.hbs", "outDir": "dist" },
    { "include": "**/*.json", "outDir": "dist" },
    "email/templates/**/*"
  ]
}
